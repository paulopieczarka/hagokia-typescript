{
    "compilerOptions": {
      "module": "commonjs",
      "baseUrl": "./src/game/",
      "paths": {
        "~*": ["./*"]
      },
      "rootDir": ".",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "typeRoots": ["./src/types"]
    },
    "lib": ["es2015"],
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
